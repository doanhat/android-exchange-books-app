<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.profile.PolyActivity">

    <ImageView
        android:id="@+id/iv_photo_poly"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/book"/>

    <TextView
        android:id="@+id/tv_name_poly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RO05"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_condition_poly"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bon état"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_note_poly"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sans note avec TD"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:enabled="false"
            android:background="@null"/>

        <EditText
            android:id="@+id/et_price_poly"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:textSize="20sp"
            android:enabled="false"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_poly"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Edit"
        android:textColor="@color/teal_700"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_border"/>

    <Button
        android:id="@+id/btn_delete_poly"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Supprimer cette proposition"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:background="@color/red"
        android:onClick="delete"/>


</LinearLayout>