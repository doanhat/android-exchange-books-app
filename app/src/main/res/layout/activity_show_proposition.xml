<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ShowPropositionActivity">

    <ImageView
        android:id="@+id/iv_photo_poly"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/book"/>

    <TextView
        android:id="@+id/tv_name_poly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nom Poly"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_condition_poly"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Bon état"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_note_poly"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Sans note avec TD"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@null"/>

        <TextView
            android:id="@+id/tv_price_poly"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:textSize="15sp"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_poly"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Edit"
        android:textColor="@color/teal_700"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_border"/>

    <Button
        android:id="@+id/btn_delete_poly"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Supprimer cette proposition"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/red"/>


</LinearLayout>